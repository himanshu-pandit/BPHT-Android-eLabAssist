<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	android:padding="5dip"
	android:orientation="horizontal"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">


	<LinearLayout android:padding="3dip"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginRight="5dip"
		android:layout_alignParentLeft="true"
		android:id="@+id/icon"
		android:visibility="gone">

		<ImageView android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/list_image"
			android:src="@drawable/report"
			android:contentDescription="@string/app_name"/>

	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_toRightOf="@+id/icon"
		android:weightSum="5">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="5"
			>

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:text="Message :"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_marginRight="5dp"
				android:maxLines="1"
				android:textStyle="bold"
				android:layout_weight="2"
				/>

			<TextView
				android:id="@+id/fullmsd_id"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:gravity="left"
				android:layout_gravity="left"
				android:text="test1"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textStyle="bold"
				android:ellipsize="marquee"
				android:scrollHorizontally="true"
				android:marqueeRepeatLimit="marquee_forever"
				android:layout_weight="3"
				android:singleLine="true" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="5"
			>
			<TextView
				android:id="@+id/txtlabcode"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:text="Status :"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_marginRight="5dp"
				android:textStyle="bold"
				android:layout_weight="2"
				/>

			<TextView
				android:id="@+id/msdstate_id"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="3"
				android:gravity="left"
				android:text="test3"
				android:maxLines="1"
				android:textAppearance="?android:attr/textAppearanceMedium"
				/>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/imgCallbtn"
				android:layout_marginRight="10dp"
				android:visibility="gone"
				android:background="@drawable/phone"/>

		</LinearLayout>

		<TextView
			android:id="@+id/Date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="5"
			android:gravity="left|center_vertical"
			android:text="date"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_marginLeft="3dp"
			android:visibility="gone"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="5">

			<TextView
				android:id="@+id/txtAmt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				android:layout_weight="2"
				android:gravity="left|center_vertical"
				android:text="Reply :"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textStyle="bold"
				/>

			<TextView
				android:id="@+id/RplyMesg_id"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:layout_weight="3"
				android:gravity="left|center_vertical"
				android:text="test3"
				android:maxLines="1"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:visibility="visible"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/ll_overWrite"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/ll2"
			android:layout_marginTop="5dp"
			android:gravity="right"
			android:orientation="horizontal"
			android:paddingBottom="5dp"
			android:visibility="gone">

			<TextView
				android:id="@+id/textOverWrite_id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="7dp"
				android:paddingRight="7dp"
				android:text="Over Write"
				android:textColor="#6cb13c"
				android:textSize="18sp"
				android:textStyle="bold"/>
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>