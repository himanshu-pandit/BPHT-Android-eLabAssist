<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:descendantFocusability="afterDescendants"
        android:orientation="horizontal"
        android:paddingBottom="05dp"
        android:paddingLeft="05dp"
        android:paddingRight="05dp"
        android:paddingTop="05dp" >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            >



            <TextView
                android:id="@+id/Labname_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#000033"
                android:textStyle="bold"
                android:text="Lab Name"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/LabAdress_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:text="Lab Address"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="05dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="0dp" >

            <TextView
                android:id="@+id/tvhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home Collection"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:visibility="gone"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll2"
            android:layout_marginTop="05dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="05dp" >



            <TextView
                android:id="@+id/Report_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:text="@string/strReports"
                android:textSize="15sp"

                android:textColor="#00004d"/>

            <TextView
                android:id="@+id/SelectLab_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="@string/strSelect"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:textColor="#00004d"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>