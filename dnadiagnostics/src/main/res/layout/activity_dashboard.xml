<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_ButtonsTab">
        <Button
            android:id="@+id/buttonPopularTest_id"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Dashboard"
            android:onClick="selectFrag"
            android:layout_weight="1"
            android:textSize="12sp"
            android:padding="1sp"
            android:background="#ff9c33"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/buttonUploadPrescription_id"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:onClick="selectFrag"
            android:text="Test Status"
            android:layout_weight="1"
            android:textSize="12sp"
            android:padding="1sp"
            android:background="#ff9c33"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/buttonSelectTest_id"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:onClick="selectFrag"
            android:text="TAT Summary"
            android:layout_weight="1"
            android:textSize="12sp"
            android:padding="1sp"
            android:background="#ff9c33"
            android:textColor="#ffffff"
            />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab Dashboard :"
        android:id="@+id/TVLabDashboard_id"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#660022"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/LL_ButtonsTab"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"

        />

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="10"
        android:layout_below="@+id/TVLabDashboard_id"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >


        <LinearLayout
            android:id="@+id/lldfeq3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:layout_weight="9">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:text="FROM"
                android:textStyle="bold|italic"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"

                />

            <EditText
                android:layout_height="40dp"
                android:layout_width="0dp"
                android:id="@+id/etFromDate"
                android:layout_weight="0.5"
                android:editable="false"
                android:clickable="false"
                android:focusable="false"
                android:textSize="13sp"
                android:textColorHint="#848484"
                android:hint="FromDate"
                android:singleLine = "true"
                android:maxLines="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.2"
                android:text="TO"
                android:textStyle="bold|italic"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:singleLine = "true"

                />

            <EditText
                android:layout_height="40dp"
                android:layout_width="0dp"
                android:id="@+id/etToDate"
                android:editable="false"
                android:layout_weight="0.5"
                android:clickable="false"
                android:focusable="false"
                android:textSize="13sp"
                android:textColorHint="#848484"
                android:hint="ToDate"
                android:singleLine = "true"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/search" />
        </LinearLayout>
    </LinearLayout>




        <LinearLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/ll_btnother2"
            android:layout_below="@+id/ll3"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="0dp">


<!-- *************************  LL_Dashboadr ********************* -->

            <LinearLayout
