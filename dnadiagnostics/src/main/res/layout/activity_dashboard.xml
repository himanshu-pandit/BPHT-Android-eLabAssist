                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:layout_gravity="center">

                                            <ProgressBar
                                                android:id="@+id/myProgressTotalAmount_id"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content" />

                                            <TextView
                                                android:id="@+id/TVPenditTest_id"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="0dp"
                                                android:layout_marginBottom="10dp"
                                                android:background="#00ffffff"
                                                android:gravity="center_horizontal"
                                                android:padding="0dp"
                                                android:text="0"
                                                android:textColor="#000000"
                                                android:textSize="25dp"
                                                android:textStyle="bold" />

                                        </RelativeLayout>
                                    </LinearLayout>

                                </TableRow>


                                <TableRow
                                    android:id="@+id/tablejklRow1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:weightSum="2"
                                    android:layout_marginTop="5dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:id="@+id/sonography_ll"
                                        android:padding="2dp"

                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:background="#00cc44"
                                        android:gravity="center_horizontal"
                                        android:layout_weight="1">
                                        <TextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="#00ffffff"
                                            android:text="Total Amount"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"
                                            android:padding="0dp"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center_horizontal"/>
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:layout_gravity="center">
                                            <ProgressBar
                                                android:id="@+id/myProgressBlnc_id"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content" />
                                            <TextView
                                                android:id="@+id/TVTotalAmount_id"
